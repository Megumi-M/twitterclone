<div class = "container">
  <div class = "row">
    <div class = "col-xs-12 col-md-2">
    <div class = "profile">
      <p>Profile</p>
      <%= image_tag "icon.jpg",width: "60%" %>
      <ul>
        <li>からいものがすき</li>
        <li>猫より犬派です</li>
      </ul>
    </div>
    </div>
    
    <div class = "col-xs-12 col-md-8">
      <p class= "top">つぶやき一覧
      <%= link_to 'つぶやく', new_tsubuyaki_path,class:"label label-success" %>
      </p>

    <% @tsubuyakis.each do |tsubuyaki| %>
     <p><span><%= tsubuyaki.content %>  投稿者：<%= tsubuyaki.user.name %></p>
     <%= link_to '詳細を確認する', tsubuyaki_path(tsubuyaki.id),class: 'btn btn-default' %>
      <% if tsubuyaki.user_id == current_user.id %>
        <%= link_to "編集する", edit_tsubuyaki_path(tsubuyaki.id),class: 'btn btn-default' %>
        <%= link_to '削除する', tsubuyaki_path(tsubuyaki.id), class: 'btn btn-danger',method: :delete, data: { confirm: '本当に削除していいですか？' }  %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>

